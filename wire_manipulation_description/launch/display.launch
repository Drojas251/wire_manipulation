<?xml version="1.0"?>
<launch>
    <arg name="gui" default="true" />
    <arg name="rvizconfig" default="$(find wire_manipulation_description)/config/urdf.rviz" />
    <arg name="urdf_path" default="$(find wire_manipulation_description)/urdf/base_scene.xacro"/>

    <!-- send robot urdf to param server -->
    <param name="robot_description" command="xacro '$(arg urdf_path)'" />
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui"
        type="joint_state_publisher_gui" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <node name="rviz" pkg="rviz" args="-d $(arg rvizconfig)" type="rviz" required="true" />
</launch>